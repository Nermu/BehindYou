<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_map"
    tools:context=".UberActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="74dp"
        app:cardCornerRadius="48dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:padding="17dp"
                android:text="You are going to Ismailia stadium by car"
                android:textColor="#292826"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/car_img"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="128dp"
                android:layout_marginEnd="124dp"
                android:src="@drawable/img_car"
                android:background="@drawable/rounded_img_car"
                app:layout_constraintTop_toBottomOf="@id/txt_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:padding="17dp"
                android:gravity="center"
                android:text="Booking nearest careem captain"
                android:textColor="#292826"
                app:layout_constraintTop_toBottomOf="@id/car_img" />

            <LinearLayout
                android:id="@+id/lin_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_btn"
                >

                <ImageButton
                    android:id="@+id/careem_btn"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginTop="83dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/rounded_btn_careem"
                    android:src="@drawable/btn_careem"
                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>